extends layout

block append scripts
  script(src='scripts/indexscript.js')

block content
    form(action='/' method='POST')
      .signin
        label First Name:
          input(type='text' name='f_name' class='signintext')
        label Last Name:
          input(type='text' name='l_name' class='signintext')
        label Username: 
          input(type='text' name='username' class='signintext')
        label Password: 
          input(type='password' name='password' class='signintext')
        label Confirm Password:
          input(type='password' name='confirm' class='signintext')
        label Email:
          input(type='text' name='email' class='signintext')
        label Security Question: What is your favorite thing about Doug?
          input(type='text' name='security' class='signintext')
        .signinButton
          input(type='submit' value='Sign Up')

    form(action='/' method='get' class='back')
      .signinButton
        input(type='submit' value='Back')
      .err
        p #{err}
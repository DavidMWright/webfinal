extends layout

block append scripts
  script(src='scripts/dropdown.js')

block content
  .inputHeader
    h1 Current Weather
    .current
      -let temp = String(weather.temp) + '\u00B0'
      h1=temp
      .currentWeather
        -let source = `http://openweathermap.org/img/w/${weather.icon}.png`
        img(src=source)
        h2=weather.desc
  .sliderContainer
    h2 How are we feeling today?
    form(action="/input" method='POST' class="sliderForm")
      input(type='range' min='-100' max='100' value='0' class='slider' id='inputSlider' name='mood')
      .labels
        p -100%
        p 100%
      h1(class="output") 0
      input(type="submit" class="sliderSubmit")

  script(src='scripts/slider.js')